! -- i3-wm appearence
i3-wm.window.border.size: 2
i3-wm.floatingwindow.border.size: 2
! -- i3-wm bindings with Finnish keyboard
! apostrophe is ' key
i3-wm.binding.next_free: apostrophe
i3-wm.binding.move_next_free: Shift+apostrophe
i3-wm.binding.take_next_free: Mod1+apostrophe
! -- i3-wm session manager
i3-wm.program.refresh_ui: ~/bin/regolith-look

! -- i3bar
i3-wm.bar.position: top
! * The separator is broken on 4K monitor with 200% scale and only showing a dot
! * (not trying to fix)
i3-wm.bar.separator: "|"

! -- i3xrocks status bar blocks
! # volume
i3xrocks.volume.step: 2
! # weather
! * Bypass location by VPN setting
i3xrocks.weather.location: Helsinki,Uusimaa

! -- Gnome terminal
!gnome.terminal.font: JetBrains Mono 9
!gnome.terminal.update: false
