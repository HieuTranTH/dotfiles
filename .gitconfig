[user]
	name = Hieu Tran
	email = hieu@tuxera.com
[core]
	editor = vi
	pager = less -+F
[alias]
	flog = log --graph --full-history --all --decorate --oneline
	cdate = log --date=short --pretty=format:\"%C(yellow)%h%Creset %C(blue)%cd%Creset %C(red)%d%Creset %s\"

# Added color
# https://nathanhoad.net/how-to-colours-in-git/
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
#	added = yellow
#	changed = green
	untracked = cyan
[log]
	decorate = auto
[diff]
	wsErrorHighlight = all
[merge]
	conflictstyle = diff3
	tool = vimdiff3
[mergetool]
	keepBackup = false
