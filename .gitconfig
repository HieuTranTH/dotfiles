[user]
	name = Hieu Tran
	email = hieu@tuxera.com
[core]
	editor = vi
	pager = less -+F
[alias]
	flog = log --graph --full-history --all --decorate --oneline
	cdate = log --date=short --pretty=format:\"%C(yellow)%h%Creset %C(blue)%cd%Creset %C(red)%d%Creset %s\"
    changelog = log --pretty=format:\"%h%x09%an%x09%ad%x09%s\"
    cchangelog = log --pretty=format:\"%C(yellow)%h%C(blue)%x09%an%C(red)%x09%ad%Creset%x09%s\"

# Added color
# https://nathanhoad.net/how-to-colours-in-git/
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = magenta bold
	frag = yellow bold
	context = 243
	old = red bold
	new = green bold
[color "status"]
#	added = yellow
#	changed = green
	untracked = cyan
[log]
	decorate = auto
[diff]
	wsErrorHighlight = all
[merge]
	conflictstyle = diff3
	tool = vimdiff3
[mergetool]
	keepBackup = false
[rebase]
    autoStash = true
