	email = hieu@tuxera.com
[core]
	editor = vi
[alias]
	flog = log --graph --full-history --all --decorate --oneline

# Added color
# https://nathanhoad.net/how-to-colours-in-git/
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
#	added = yellow
#	changed = green
	untracked = cyan
