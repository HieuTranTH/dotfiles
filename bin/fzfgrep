#!/bin/bash

#echo "=========================================="
#echo "Interactive search"
#echo "=========================================="
#echo
#@ usage: `fzfgrep` or `fzfgrep <folder>`. `-g` option to use `git grep`
#@ author: Hieu Tran
#@ email : hieu@tuxera.com

PROGNAME=${0##*/}

## Default values
EXIT_FAILURE=1
GITGREP=0

function usage() {
    echo -e "$PROGNAME - Interactive search with ripgrep, grep, or git grep\n"
    echo -e "usage: $PROGNAME [-g] [-h] [-?] [PATH]\n"
    echo -e "   -g: Use git grep."
    echo -e "   -h: Print this help message."
    echo -e "   -?: Print this help message."
}

function die() {
    echo "ERROR: $*" >&2
    exit $EXIT_FAILURE
}

## List of options the program will accept;
## those options that take arguments are followed by a colon
OPTSTRING='gh?'

## The loop calls getopts until there are no more options on the command line
## Each option is stored in $OPT, any option arguments are stored in OPTARG
while getopts "$OPTSTRING" OPT
do
    case $OPT in
        g)
            GITGREP=$(( GITGREP + 1 ))
            ;;
        *)
            usage >&2
            exit $EXIT_FAILURE
            ;;
    esac
done

## Remove options from the command line
## $OPTIND points to the next, unparsed argument
shift "$(( OPTIND - 1 ))"

[[ -n $1 ]] && cd $1 # go to provided folder or noop

if [ "$GITGREP" -gt 0 ]; then
    GREP_DEFAULT_COMMAND="git grep -i -l -I"
    FZF_DEFAULT_COMMAND="git ls-files"
    PROMPT="GITGREP > "
    PREVIEW="git grep -n -i -h --color=always --context 4 {q} {}"
elif which rg; then
    GREP_DEFAULT_COMMAND="rg -i -l --hidden --no-ignore-vcs"
    FZF_DEFAULT_COMMAND="rg --files"
    PROMPT="RG > "
    PREVIEW="rg -i --pretty --context 4 {q} {}"
elif which grep; then
    GREP_DEFAULT_COMMAND="grep -i -l -I -R"
    FZF_DEFAULT_COMMAND="find"
    PROMPT="GREP > "
    PREVIEW="grep -n -i --color=always --context 4 {q} {}"
else
    echo "No grep found"
    exit 1
fi

selected=$(
    FZF_DEFAULT_COMMAND="$FZF_DEFAULT_COMMAND" fzf \
        -m \
        -e \
        --ansi \
        --disabled \
        --prompt="$PROMPT" \
        --reverse \
        --print-query \
        --no-mouse \
        --bind "ctrl-a:select-all" \
        --bind "ctrl-alt-a:deselect-all" \
        --bind "ctrl-d:preview-half-page-down" \
        --bind "ctrl-u:preview-half-page-up" \
        --bind 'ctrl-o:execute-silent:(/usr/bin/gnome-terminal --geometry=95x50 --class=floating_window -- bash -c "vim +/{q} {}" &)' \
        --bind "change:reload:$GREP_DEFAULT_COMMAND {q} || true" \
        --preview "$PREVIEW"
)

QUERY_STRING=$( sed "1 q" <<<"$selected" )
selected=$( sed "1 d" <<<"$selected" )
[[ -n $selected ]] && vim +/"\v$QUERY_STRING" -p $selected # open multiple files in editor
